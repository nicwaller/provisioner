{
  "description": "An ordered list of configuration stages",
  "type": "array",
  "items": {
    "description": "Declares the intended configuration of a server",
    "type": "object",
    "properties": {
      "package": {
        "type": "object",
        "patternProperties": {
          ".*": {
            "type": "object",
            "required": [
              "installed"
            ],
            "properties": {
              "installed": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "file_copy": {
        "type": "object",
        "patternProperties": {
          ".*": {
            "type": "object",
            "required": [
              "source",
              "owner",
              "group",
              "mode"
            ],
            "properties": {
              "source": {
                "type": "string"
              },
              "owner": {
                "type": "string"
              },
              "group": {
                "type": "string"
              },
              "mode": {
                "type": "string"
              }
            }
          }
        }
      },
      "observe": {
        "type": "object",
        "patternProperties": {
          ".*": {
            "type": "object",
            "required": [
              "command"
            ],
            "properties": {
              "command": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}

