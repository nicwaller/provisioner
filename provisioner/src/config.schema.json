{
  "description": "An ordered list of configuration stages",
  "type": "array",
  "items": {
    "description": "Declares the intended configuration of a server",
    "type": "object",
    "properties": {
      "package": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "name",
            "installed"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "installed": {
              "type": "boolean"
            }
          }
        }
      },
      "file_copy": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "destination"
          ],
          "properties": {
            "destination": {
              "type": "string"
            },
            "source": {
              "type": "string"
            },
            "owner": {
              "type": "string"
            },
            "group": {
              "type": "string"
            },
            "mode": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}

