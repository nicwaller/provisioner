{
  "description": "An ordered list of configuration stages",
  "type": "array",
  "items": {
    "description": "Declares the intended configuration of a server",
    "type": "object",
    "properties": {
      "package": {
        "type": "object",
        "patternProperties": {
          ".*": {
            "type": "object",
            "required": [
              "installed"
            ],
            "properties": {
              "installed": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "file": {
        "type": "object",
        "patternProperties": {
          ".*": {
            "type": "object",
            "oneOf": [
              {
                "required": [
                  "action"
                ],
                "properties": {
                  "action": {
                    "const": "delete"
                  }
                },
                "additionalProperties": false
              },
              {
                "required": [
                  "action",
                  "source",
                  "owner",
                  "group",
                  "mode"
                ],
                "properties": {
                  "source": {
                    "type": "string"
                  },
                  "owner": {
                    "type": "string"
                  },
                  "group": {
                    "type": "string"
                  },
                  "mode": {
                    "type": "string",
                    "pattern": "^[0-7]{3,4}$"
                  },
                  "action": {
                    "const": "create"
                  },
                  "conflict": {
                    "default": "backup",
                    "enum": [
                      "abort",
                      "backup",
                      "overwrite"
                    ]
                  }
                }
              }
            ]
          }
        }
      },
      "observe": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": {
          "(package|file)\\[.*\\]": {
            "type": "object",
            "required": [
              "command"
            ],
            "properties": {
              "command": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}

